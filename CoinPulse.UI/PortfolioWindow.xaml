<Window x:Class="CoinPulse.UI.PortfolioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:local="clr-namespace:CoinPulse.UI"
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        Title="Your Portfolio" Height="600" Width="800"
        Background="{StaticResource BackgroundBrush}" Foreground="{StaticResource TextPrimaryBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Chart -->
            <RowDefinition Height="Auto"/> <!-- Close Button -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="Portfolio Distribution" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Total Value: " Foreground="{StaticResource TextSecondaryBrush}" FontSize="16"/>
                <TextBlock Foreground="{StaticResource SecondaryBrush}" FontSize="18" FontWeight="Bold">
                    <Run Text="{Binding CurrentCurrencySymbol, Mode=OneWay}"/>
                    <Run Text="{Binding TotalPortfolioValue, StringFormat='N2', Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Pie Chart -->
        <lvc:PieChart Grid.Row="1" 
                      Series="{Binding PortfolioSeries}" 
                      LegendPosition="Right"
                      LegendTextPaint="{Binding LegendTextPaint}"
                      Margin="0,0,0,20">
        </lvc:PieChart>

        <!-- Close Button -->
        <Button Grid.Row="2" Content="CLOSE" IsCancel="True"
                HorizontalAlignment="Center" Width="150" Padding="10"
                Background="{StaticResource SurfaceLightBrush}" Foreground="{StaticResource TextPrimaryBrush}"
                BorderThickness="0" Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>